
<!-- only allow hire item if current user does not own item -->
<% unless @item.user_id == current_user.id %>
  <%= button_to 'Hire',
   {:controller => "hires",
    :action => "create",
    :item_id => @item.id,
    :user_id=> current_user.id,
    :hired => 1} ,
    :method=>:post  %>
<% end %>

<%  if @item.user.id  == current_user.id %>

  <%= button_to 'Edit', edit_item_path(@item), method: :get, class: "btn-sm btn-info"%>

<% end %>

<% @item.hires.each do |hire| %>
    <% if hire.hired == true %>
    <h4> Item is unavailable</h4>
    <% end %>
<% end %>

<!-- Show who the item belongs to with a link to their profile -->
<h1><%= @item.name %></h1>
<h3>This item belongs to <%=link_to @item.user.name, user_path(@item.user.id) %></h3>

<!-- only allow edit item if current user owns item -->

  <div style="width:300px; height:auto">
        <%= image_tag(@item.image, style:'width:100%') %>
  </div>

  <h4>Price: Â£<%= @item.price %> per/day</h4>

  <h4>Item owner: <%=link_to @item.user.name, user_path(@item.user.id) %></h4>

  <h5>Category:<%= @item.catagory %></h5>

  <h5>Location:<%= @item.user.location %></h5>

  <h6><%= @item.description %></h6>



<h3>Item Reviews</h3>
<br>
  <% @count = 0 %>
    <% @item.review.reverse_each do |c| %>

      <p>
      <%= radio_button_tag @count, 'true', c.reaction, disabled: true %>
      <%= label_tag @count, "Upvote"%>
      <%= radio_button_tag @count, 'false', !c.reaction, disabled: true %>
      <%= label_tag @count, "Downvote"%>
      </p>
      <% @count += 1 %>
      <h5> <%= c.content %></h5>
    <br>
    <br>
    <% end %>

  <h1><%= @item.name %></h1>

  <% @item.hires.each do |hire| %>
      <% if hire.hired == true %>

          <h4> Item is unavailable</h4>
      <% end %>
  <% end %>

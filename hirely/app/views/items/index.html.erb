<h1>All Items</h1>

<h2>got to profile: <%= link_to self.current_user.name, user_path(self.current_user.id) %></h2>

<%= link_to 'create a new Item', new_item_path %>

<h4>Search by name</h4>
<%= form_tag(items_path, method: :get) do %>
<%= text_field_tag(:search, params[:search]) %>
<%= submit_tag "Search" %>
<% end %>



  <% @items.each do |item| %>

      <div class="card-deck">
        <div class="card">

          <div class="card-body">
            <h5 class="card-title"><%= item.name %></h5>
            <%= link_to 'View', item, class:"btn btn-primary"%>
          </div>
        </div>
        </div>

  <% end %>

<%= form_for @item do |f| %>

  <%= f.label :name%>
  <%= f.text_field :name %>

  <br>

  <%= f.label :description%>
  <%= f.text_field :description %>

  <br>

  <%= f.label :catagory%>
  <%= f.text_field :catagory %>

  <br>

  <%= f.label :price%>
  <%= f.number_field :price %>

  <br>

  <%= f.label :user_id%>
  <%= f.number_field :user_id %>

  <br>

  <%= f.submit %>
<% end %>

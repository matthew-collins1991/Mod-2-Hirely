<h2 class="title">
    <% if @item.id == nil %>
    Add Item
  <% else %>
    Edit Item
    <% end %>
      </h2>
<br>

<div class"forms">


<%= form_for @item do |f| %>

<div class="form-group">


  <%= f.label :name%>
  <%= f.text_field :name, class:"form-control" , placeholder:"Enter Item name"%>

</div>

<div class="form-group">
  <%= f.label :description%>
  <%= f.text_field :description, class:"form-control" , placeholder:"Item description" %>
</div>


<!-- need to make this a data select type -->
<div class="form-group">
  <%= f.label :catagory, 'Category'%><br>
  <%= f.select :catagory, ['Beauty','Garden','Home','Kitchen','Car'],  class:"form-control" %>

</div>


<div class="form-group">
  <%= f.label :price%>
  <%= f.number_field :price, class:"form-control" , placeholder:"Price of item per day" %>
</div>


<!-- add and image  -->
<div class="form-group">
  <%= f.label :image %><br>
  <%= f.file_field :image %>
</div>

<br>
<% if @item.id == nil %>
<%= f.submit "Add Item", class:"form_button"%>
<% else %>
<%= f.submit "Edit Item", class:"form_button"%>
<% end %>


<% end %>
<br>
<% if @item.id != nil %>
<%= button_to 'Delete item', item_path(@item), method: :delete, class: "form_button"%>
<% end %>
